<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"


                android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size02"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textAlignment="center">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ir.lococoder.eplayer.system.fonts.Bold
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بابک جهانبخش"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size19"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textAlignment="center">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ir.lococoder.eplayer.system.fonts.SemiBold
                    android:id="@+id/txt_album_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" من و بارون"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size19"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size30"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:foregroundGravity="center"
                android:gravity="center">

                <!--<com.makeramen.roundedimageview.RoundedImageView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/img_cover"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="0dp"-->
                <!--android:elevation="7dp"-->
                <!--android:padding="3dp"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintDimensionRatio="1:1"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->

                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent"-->
                <!--app:riv_border_color="@color/colorPrimary"-->
                <!--app:riv_border_width="3dip"-->
                <!--app:riv_corner_radius="20dip"-->
                <!--app:riv_mutate_background="true"/>-->

                <!--android:layout_width="@dimen/image_tools_banner"-->
                <!--android:layout_height="@dimen/image_tools_banner"-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lyt_img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="false"
                    android:elevation="0dp"
                    android:foregroundGravity="center">>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:baselineAlignBottom="false"
                        android:src="@drawable/ic_music_note_black_24dp"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--</androidx.constraintlayout.widget.ConstraintLayout>-->

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:max="5"
                android:rating="3"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size15"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ir.lococoder.eplayer.system.fonts.Light
                android:id="@+id/txt_all_rates3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رای)"
                android:textColor="@android:color/white"/>

            <ir.lococoder.eplayer.system.fonts.Light
                android:id="@+id/txt_all_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="114"
                android:textColor="@android:color/white"/>

            <ir.lococoder.eplayer.system.fonts.Light
                android:id="@+id/txt_all_rates2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size05"
                android:text=")"
                android:textColor="@android:color/white"/>

            <ir.lococoder.eplayer.system.fonts.Bold
                android:id="@+id/txt_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size02"
                android:layout_marginRight="@dimen/size02"
                android:text="4.7"
                android:textColor="@android:color/white"/>

            <ir.lococoder.eplayer.system.fonts.Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  : امتیاز"
                android:textColor="@android:color/white"
                android:textDirection="ltr"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>